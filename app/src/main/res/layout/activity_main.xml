<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="4"
    tools:context="com.example.jc321013.tipcalculator.MainActivity">

    <TextView
        android:id="@+id/amountText"
        android:layout_columnWeight="1"
        android:layout_gravity="center_vertical"
        android:layout_rowWeight="1"
        android:background="@color/moneyBackground"
        android:elevation="@dimen/moneyElevation"
        android:gravity="end"
        android:padding="@dimen/moneyPadding"
        android:text="$100"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/userInput"
        android:layout_columnWeight="10"
        android:layout_rowWeight="1"
        android:inputType="number" />

    <TextView
        android:id="@+id/percentageText"
        android:layout_columnWeight="1"
        android:layout_gravity="center_vertical"
        android:layout_rowWeight="1"
        android:gravity="end"
        android:text="10%"
        android:textSize="36sp" />

    <SeekBar
        android:id="@+id/percentagebar"
        android:layout_columnWeight="10"
        android:layout_rowWeight="1"
        android:hapticFeedbackEnabled="false" />

    <TextView
        android:layout_columnWeight="1"
        android:layout_gravity="center_vertical"
        android:layout_rowWeight="1"
        android:gravity="end"
        android:text="Tip"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/tipText"
        android:layout_columnWeight="10"
        android:layout_rowWeight="1"
        android:background="@color/moneyBackground"
        android:elevation="@dimen/moneyElevation"
        android:gravity="center"
        android:padding="@dimen/moneyPadding"
        android:text="$10"
        android:textSize="36sp" />

    <TextView
        android:layout_columnWeight="1"
        android:layout_gravity="center_vertical"
        android:layout_rowWeight="1"
        android:gravity="end"
        android:text="Total"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/totalText"
        android:layout_height="wrap_content"
        android:layout_columnWeight="10"
        android:layout_rowWeight="1"
        android:background="@color/moneyBackground"
        android:elevation="@dimen/moneyElevation"
        android:gravity="center"
        android:padding="@dimen/moneyPadding"
        android:text="$110"
        android:textSize="36sp" />


</GridLayout>
